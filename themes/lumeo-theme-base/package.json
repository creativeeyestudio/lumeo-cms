{
  "name": "lumeo-theme-base",
  "version": "0.1.0",
  "description": "Thème de base du CMS Lumeo",
  "license": "MIT",
  "author": "Kévin Rifa",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./styles": {
      "import": "./dist/styles.css"
    }
  },
  "files": [
    "dist"
  ],
  "sideEffects": [
    "*.css"
  ],
  "peerDependencies": {
    "next": ">=14",
    "react": ">=18",
    "react-dom": ">=18"
  },
  "devDependencies": {
    "@types/react": "^19.2.7",
    "autoprefixer": "^10.4.0",
    "postcss": "^8.4.0",
    "tailwindcss": "^3.4.0",
    "tsup": "^8.0.0",
    "typescript": "^5.3.0"
  },
  "scripts": {
    "dev": "tsup src/index.ts --watch",
    "build": "tsup src/index.ts --format esm,cjs --dts",
    "build:styles": "tailwindcss -c tailwind.config.ts -i src/styles/globals.css -o dist/styles.css",
    "prepublishOnly": "npm run build && npm run build:styles"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/your-org/lumeo-theme-base.git"
  },
  "keywords": [
    "lumeo",
    "cms",
    "cms-theme",
    "nextjs",
    "payload",
    "page-builder"
  ],
  "dependencies": {
    "scss": "^0.2.4"
  }
}
